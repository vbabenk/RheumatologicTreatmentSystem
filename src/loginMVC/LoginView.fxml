<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="300.0" style="-fx-background-color: #0088CC;" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="diploma.loginMVC.LoginController">
    <Label layoutX="61.0" layoutY="40.0" text="Ласкаво просимо!" textFill="WHITE">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Label>
    <Button fx:id="loginBtn" layoutX="89.0" layoutY="200.0" mnemonicParsing="false" onAction="#loginIntoSystem" text="Увійти в систему">
        <font>
            <Font size="14.0" />
        </font>
    </Button>
    <TextField fx:id="loginField" layoutX="48.0" layoutY="110.0" prefHeight="28.0" prefWidth="210.0" promptText="Введіть логін користувача">
        <font>
            <Font size="14.0" />
        </font>
    </TextField>
    <PasswordField fx:id="passwordField" layoutX="48.0" layoutY="150.0" prefHeight="28.0" prefWidth="210.0" promptText="Введіть пароль">
        <font>
            <Font size="14.0" />
        </font>
    </PasswordField>
</AnchorPane>
